                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Activity Type" />

            <Spinner
                android:id="@+id/activity_type"
                style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>


